@page
@model Inspectral.Pages.Secciones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Seccion</h4>
<hr />
<link rel="stylesheet" href="~/lib/bootstrap3-wysiwyg/bootstrap3-wysihtml5.css" />
<div class="row">
    <div class="col-md-9">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EstaSeccion.SeccionID" />
            <div class="form-group">
                <label asp-for="EstaSeccion.InformeID" class="control-label"></label>
                <input asp-for="EstaSeccion.InformeID" class="form-control" />
                <span asp-validation-for="EstaSeccion.InformeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstaSeccion.Orden" class="control-label"></label>
                <input asp-for="EstaSeccion.Orden" class="form-control" />
                <span asp-validation-for="EstaSeccion.Orden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstaSeccion.Titulo" class="control-label"></label>
                <input asp-for="EstaSeccion.Titulo" class="form-control" />
                <span asp-validation-for="EstaSeccion.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstaSeccion.Contenido" class="control-label"></label>
                <textarea asp-for="EstaSeccion.Contenido" id="wysi" class="form-control"></textarea>
                <span asp-validation-for="EstaSeccion.Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Informes/Details" asp-route-emid="0" asp-route-inid="@Model.EstaSeccion.InformeID">Volver al Informe</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/bootstrap3-wysiwyg/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log("ready!");
            $('#wysi').wysihtml5({
                toolbar: {
                    "font-styles": true, //Font styling, e.g. h1, h2, etc. Default true
                    "emphasis": true, //Italics, bold, etc. Default true
                    "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
                    "html": true, //Button which allows you to edit the generated HTML. Default false
                    "link": true, //Button to insert a link. Default true
                    "image": true, //Button to insert an image. Default true,
                    "color": true, //Button to change color of font
                    "blockquote": true, //Blockquote
                    "fa": false
                }
            });
        });
    </script>
}
